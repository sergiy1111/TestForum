@model TestForum.Models.Post.NewPostModel

<h1>Create new post | @Model.ForumName </h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"></input>
    </div>
    <div>
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
    </div>
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Create post</button>
    <input asp-for="ForumId" type="hidden" />
</form>