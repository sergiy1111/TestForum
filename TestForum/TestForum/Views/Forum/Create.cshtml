@model TestForum.Models.Forum.AddForumModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            <h1>Create New Forum</h1>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" placeholder="Enter forum title" />
                    <label asp-for="Title">Forum Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" placeholder="Write forum description" />
                    <label asp-for="Description">Forum Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Forum Image</label>
                    <div class="input-group">
                        <input asp-for="ImageUrl" type="file" class="form-control" id="inputGroupFile" aria-label="Upload" />
                    </div>
                </div>

                <button type="submit" id="newFormBtn" class="btn btn-submitPost w-100" style="background-color: forestgreen">Create Forum</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
