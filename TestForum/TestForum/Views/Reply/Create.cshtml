@model TestForum.Models.Reply.PostReplyModel




<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">Reply | @Model.PostTitle 
            <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
            <span id="headingBtn">
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Back to @Model.ForumName</a>
            </span>
        </div>
    </div>
    <div class="row">
        <div id="originalPost">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                You reply to this post as <strong>@Model.AuthorName</strong>
            </div>
            <form asp-action="AddReply" method="post" id="addReplyForm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ReplyContent">Reply: </label>
                    <textarea asp-for="ReplyContent" rows="5" class="form-control" placeholder="Your reply"></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>

                <button type="submit" id="submitReplyBtn" class="btn btn-submitPost" style="margin-top: 10px">Submit reply</button>

                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>